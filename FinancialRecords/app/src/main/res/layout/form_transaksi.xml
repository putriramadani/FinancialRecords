<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/orange">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="25sp"
            android:text="Form Transaksi"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/vie_main_bg"
        android:orientation="vertical"
        android:padding="20dp"
        app:tabTextColor="@color/black">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="265dp"
            android:layout_height="20dp"
            android:text=" Jenis Kategori"
            android:textColor="@color/orange"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/ddl_jenis"
            android:layout_width="257dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@color/orange"
            android:entries="@array/Spinner_items"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"
            android:textSize="16sp"></Spinner>

        <TextView
            android:layout_width="265dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:text=" Kategori"
            android:textColor="@color/orange"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/ddl_kategori"
            android:layout_width="257dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@color/orange"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"
            android:textSize="16sp"></Spinner>

        <EditText
            android:id="@+id/txt_jumlah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg"
            android:hint="Jumlah"
            android:inputType="textCapSentences"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/orange"
            android:textColorHint="@color/grey"
            android:textSize="16sp"
            app:layout_constraintHorizontal_bias=".5"
            app:layout_constraintVertical_bias=".3" />

        <EditText
            android:id="@+id/txt_keterangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg"
            android:hint="Keterangan"
            android:inputType="textCapSentences"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/orange"
            android:textColorHint="@color/grey"
            android:textSize="16sp"
            app:layout_constraintHorizontal_bias=".5"
            app:layout_constraintVertical_bias=".3" />

        <Button
            android:id="@+id/btn_simpan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_bg"
            android:text="Simpan"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>